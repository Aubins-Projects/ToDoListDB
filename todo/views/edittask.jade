    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    span &nbsp;
    input#input_duedate(type="date", placeholder=edittask[0].duedate, value=edittask[0].duedate, name="duedate")
    br
    br
    span User
    span &nbsp;
    input#input_user(type="text", placeholder=edittask[0].user,value=edittask[0].user, name="user")
    input#input_user(type="hidden", name="_id", value=edittask[0]._id)
    br
    br
    button#submit_task(type="submit") submit
  form#form_add_task(name="addtask", method="get", action="/thelist")
