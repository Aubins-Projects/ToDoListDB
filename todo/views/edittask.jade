    span &nbsp;
    input#input_name(type="text", placeholder=edittask[0].name,value=edittask[0].name, name="task")
    br
    br
    span Priority
    span &nbsp;
    input#input_priority(type="number", placeholder=edittask[0].priority,value=edittask[0].priority, name="priority")
    br
    br
    span Hours
    span &nbsp;
    input#input_hours(type="number", placeholder=edittask[0].time[0],value=edittask[0].time[0], name="hours")
    br
    br
    span Minutes
    span &nbsp;
    input#input_minutes(type="number", placeholder=edittask[0].time[1],value=edittask[0].time[1], name="minutes")
    br
    br
    span Subtask
    span &nbsp;
    input#input_subtask(type="checkbox", placeholder=edittask[0].subtask,value=edittask[0].subtask, name="subtask")
